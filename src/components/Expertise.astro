---
import { Icon } from "astro-icon/components";
---

<section id="expertise">
  <!-- Education Hero Section -->
  <div class="education-hero">
    <div class="hero-content">
      <p class="hero-subtitle">MY EDUCATION SPEAKS FOR ITSELF</p>
      <h1 class="hero-title">
        EXCELLENCE IN<br />
        <span class="yellow-text">EDUCATION AND TECHNOLOGY</span>
      </h1>
      <p class="hero-description">
        My solid academic background and international experience have prepared
        me to lead complex technological projects with a global approach and
        exceptional results.
      </p>

      <div class="stats-container">
        <div class="stat-item">
          <div class="stat-number">8.5/10</div>
          <div class="stat-label">UNIVERSITY AVERAGE GRADE</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">+5 COURSES</div>
          <div class="stat-label">COMPLETED CERTIFICATIONS</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">3 COUNTRIES</div>
          <div class="stat-label">INTERNATIONAL EXPERIENCE</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tech Stack Section -->
  <div class="tech-stack-section">
    <div class="tech-hero-content">
      <p class="tech-subtitle">TECHNOLOGIES I MASTER</p>
      <h2 class="tech-main-title">
        THE STACK OF A<br />
        <span class="yellow-text">COMPLETE DEVELOPER</span>
      </h2>
      <p class="tech-description">
        From modern interfaces to robust backend architectures, I handle the
        most demanded tools in today's technology market.
      </p>
    </div>

    <div class="tech-showcase">
      <div class="tech-category-modern">
        <div class="category-header">
          <h3 class="category-title">FRONTEND</h3>
          <p class="category-subtitle">Interfaces Modernas & Responsivas</p>
        </div>
        <div class="tech-grid">
          <div class="tech-item">
            <Icon name="tech-stack/react" size={50} title="React" />
            <span class="tech-name">React</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/angular" size={50} title="Angular" />
            <span class="tech-name">Angular</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/next-js" size={50} title="Next.js" />
            <span class="tech-name">Next.js</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/typescript" size={50} title="TypeScript" />
            <span class="tech-name">TypeScript</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/astro" size={50} title="Astro" />
            <span class="tech-name">Astro</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/html5" size={50} title="HTML5" />
            <span class="tech-name">HTML5</span>
          </div>
        </div>
      </div>

      <div class="tech-category-modern">
        <div class="category-header">
          <h3 class="category-title">BACKEND & TOOLS</h3>
          <p class="category-subtitle">Arquitectura & Desarrollo</p>
        </div>
        <div class="tech-grid">
          <div class="tech-item">
            <Icon name="tech-stack/python" size={50} title="Python" />
            <span class="tech-name">Python</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/java" size={50} title="Java" />
            <span class="tech-name">Java</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/nodejs" size={50} title="Node.js" />
            <span class="tech-name">Node.js</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/git" size={50} title="Git" />
            <span class="tech-name">Git</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/github" size={50} title="GitHub" />
            <span class="tech-name">GitHub</span>
          </div>
          <div class="tech-item">
            <Icon name="tech-stack/npm" size={50} title="NPM" />
            <span class="tech-name">NPM</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Certificates Gallery Section -->
  <div class="certificates-section">
    <h2 class="gallery-title">CERTIFICATIONS AND COURSES</h2>
    <div class="certificates-grid">
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/1e3860/5be8e8?text=REACT+CERTIFICATE"
          alt="React Certificate"
        />
        <div class="certificate-overlay">
          <h3>LEARN REACT</h3>
          <p>Codecademy (2021)</p>
        </div>
      </div>
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/2d4a5a/7dd3fc?text=ML+KERAS"
          alt="Machine Learning Certificate"
        />
        <div class="certificate-overlay">
          <h3>MACHINE LEARNING</h3>
          <p>IBM Keras (2022)</p>
        </div>
      </div>
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/374151/a7f3d0?text=TYPESCRIPT"
          alt="TypeScript Certificate"
        />
        <div class="certificate-overlay">
          <h3>TYPESCRIPT</h3>
          <p>Udemy (2023)</p>
        </div>
      </div>
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/4c1d95/c4b5fd?text=JAVASCRIPT"
          alt="JavaScript Certificate"
        />
        <div class="certificate-overlay">
          <h3>MASTER JAVASCRIPT</h3>
          <p>Victor Robles (2023)</p>
        </div>
      </div>
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/7c2d12/fed7aa?text=ANGULAR"
          alt="Angular Certificate"
        />
        <div class="certificate-overlay">
          <h3>ANGULAR AVANZADO</h3>
          <p>Certification (2023)</p>
        </div>
      </div>
      <div class="certificate-item">
        <img
          src="https://placehold.co/400x300/0f766e/a7f3d0?text=FULLSTACK"
          alt="Full Stack Certificate"
        />
        <div class="certificate-overlay">
          <h3>FULL STACK</h3>
          <p>Desarrollo Completo</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section Styles */
  .education-hero {
    padding-bottom: 3rem;
    background:
      linear-gradient(135deg, rgba(30, 56, 96, 0.85), rgba(45, 74, 90, 0.75)),
      url("/images/hogskulen-pa-vestlandet.jpg") center/cover;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 900px;
    padding: 2rem;
  }

  .hero-subtitle {
    font-size: 0.9rem;
    letter-spacing: 2px;
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
    color: white;
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .stats-container {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 1px;
    font-weight: 500;
  }

  /* Tech Stack Section */
  .tech-stack-section {
    padding: 4rem 2rem;
    background: var(--background-dark);
    border-radius: 2rem;
    position: relative;
    z-index: 2;
    margin-top: -2rem;
    margin-bottom: -2rem;
  }

  .tech-hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem auto;
  }

  .tech-subtitle {
    font-size: 0.9rem;
    letter-spacing: 2px;
    color: var(--primary-color);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .tech-main-title {
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
    color: white;
  }

  .tech-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
  }

  .tech-showcase {
    display: flex;
    gap: 3rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
  }

  .tech-category-modern {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 2.5rem;
    min-width: 450px;
    flex: 1;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .tech-category-modern:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .category-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .category-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .category-subtitle {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 400;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1.5rem;
    justify-items: center;
  }

  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem;
    border-radius: 0.8rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .tech-item:hover {
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-3px);
  }

  .tech-name {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    text-align: center;
  }

  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  .tech-icons [data-icon] {
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    filter: grayscale(0.3);
  }

  .tech-icons [data-icon]:hover {
    transform: scale(1.2);
    filter: grayscale(0);
  }

  /* Certificates Gallery */
  .certificates-section {
    padding-top: 5rem;
    padding-bottom: 3rem;
    padding-left: 2rem;
    padding-right: 2rem;
    background: var(--background-test2);
    text-align: center;
  }

  .gallery-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 3rem;
    letter-spacing: 1px;
  }

  .certificates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .certificate-item {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 4/3;
    transition: transform 0.3s ease;
  }

  .certificate-item:hover {
    transform: translateY(-5px);
  }

  .certificate-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .certificate-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .certificate-item:hover .certificate-overlay {
    transform: translateY(0);
  }

  .certificate-overlay h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .certificate-overlay p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .education-hero {
      min-height: 60vh;
      padding: 1rem;
    }

    .hero-content {
      padding: 1rem;
    }

    .stats-container {
      gap: 2rem;
      flex-direction: column;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 2rem;
    }

    .tech-categories {
      flex-direction: column;
      gap: 2rem;
    }

    .tech-category {
      min-width: auto;
    }

    .certificates-grid {
      grid-template-columns: 1fr;
    }

    .section-title,
    .gallery-title {
      font-size: 2rem;
    }
  }
</style>
