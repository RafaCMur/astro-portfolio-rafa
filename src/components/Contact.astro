---
import { Icon } from "astro-icon/components";
import { ADDRESS, EMAIL, LINKEDIN_URL, PHONE } from "../consts";

const MAILTO_LINK = `mailto:${EMAIL}`;
const PHONE_LINK = `tel:${PHONE}`;
---

<section id="contact">
  <div class="section-content">
    <div class="flex-row flex-wrap gap-2">
      <div class="contact-info">
        <h1>Contact me</h1>
        <p>Don't be shy :)</p>

        <div class="flex-col gap-1 mt-2">
          <div class="flex-row gap-1">
            <Icon name="mail" size={24} />
            <a href={MAILTO_LINK}>{EMAIL}</a>
          </div>

          <div class="flex-row gap-1">
            <Icon name="phone" size={24} />
            <a href={PHONE_LINK}>{PHONE}</a>
          </div>

          <div class="flex-row gap-1">
            <Icon name="location-pin" size={24} />
            <span>{ADDRESS}</span>
          </div>

          <div class="flex-row gap-1">
            <Icon name="linkedin" size={24} />
            <a href={LINKEDIN_URL} target="_blank">LinkedIn</a>
          </div>
        </div>
      </div>

      <div class="contact-form">
        <form id="contact-form-1" class="flex-col gap-1 align-center">
          <div class="flex-row gap-1 w-100">
            <input
              type="text"
              name="name"
              placeholder="Name"
              class="input-field"
              required
            />
            <input
              type="email"
              name="email"
              placeholder="Email"
              class="input-field"
              required
            />
          </div>
          <input
            type="text"
            name="subject"
            placeholder="Subject"
            class="input-field w-100"
          />
          <textarea
            name="message"
            placeholder="Message"
            class="input-field textarea"
            required></textarea>
          <button type="submit" class="button-primary w-50">
            Send Message
          </button>
        </form>
        <script>
          import { setupFormHandler } from "../utils/formHandler.ts";
          setupFormHandler("contact-form-1");
        </script>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-info {
    flex: 1;
    min-width: 15rem;
  }

  .contact-form {
    flex: 1;
    min-width: 19rem;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
  }

  .input-group {
    display: flex;
    gap: 12px;
  }

  .input-field {
    width: 100%;
    padding: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1); /* Define mejor los inputs */
    border-radius: 0.4rem;
    background-color: #1b2a41; /* Un tono más claro que el fondo */
    color: #ffffff;
    transition: all 0.2s ease-in-out;

    /* Sombras más sutiles */
    box-shadow:
      inset 1px 1px 3px rgba(0, 0, 0, 0.3),
      inset -1px -1px 3px rgba(255, 255, 255, 0.04);
  }

  /* Efecto al enfocar */
  .input-field:focus {
    background-color: #22334d; /* Se aclara ligeramente al escribir */
    border-color: var(--primary-color); /* Resalta el borde */
    box-shadow:
      inset 0px 0px 5px rgba(91, 232, 232, 0.3),
      0px 0px 10px rgba(91, 232, 232, 0.2); /* Sombra externa sutil */
    outline: none;
  }

  .input-field::placeholder {
    font-family: Sora;
    font-size: 1em;
  }

  .input-field:focus {
    border-color: var(--primary-color);
    outline: none;
  }

  .textarea {
    height: 8rem;
    resize: vertical;
  }

  @media (max-width: 600px) {
    .form-group {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
