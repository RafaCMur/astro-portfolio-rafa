---
import { Icon } from "astro-icon/components";
import { RESUME_URL } from "../consts";
---

<section id="intro">
  <div class="hero-background"></div>
  <div class="hero-overlay"></div>
  <div class="intro-container">
    <div class="intro-text">
      <p class="big-text">Hi, I'm Rafa ðŸ‘‹</p>
      <p class="title-text gradient-text">Frontend Developer</p>
      <p class="subtitle-text">Who loves creating web apps.</p>
      <div class="flex-row gap-1 mt-1">
        <a
          class="button-secondary"
          href={RESUME_URL}
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="hero-btn-text">Resume</span>
          <Icon name="resume" size={24} />
        </a>
        <a class="button-primary" href="/about">
          <span class="hero-btn-text">About me</span>
          <Icon name="arrow-right2" size={24} />
        </a>
      </div>
    </div>
    <img
      src="/rafael-frontend-developer.jpg"
      alt="Rafael Frontend Developer"
      class="profile-image"
    />
  </div>
</section>

<style>
  #intro {
    position: relative;
    min-height: var(--intro-height);
    overflow: hidden;
    padding: 0;
    margin: 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--intro-height);
    background-image: url("/images/hero-bg.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -2;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--intro-height);
    background: linear-gradient(
      135deg,
      rgba(20, 33, 61, 0.9) 0%,
      rgba(20, 33, 61, 0.7) 50%,
      rgba(59, 130, 246, 0.6) 100%
    );
    z-index: -1;
  }

  .intro-container {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    gap: 2rem;
    position: relative;
    z-index: 1;
    min-height: var(--intro-height);
    padding: 2rem;
  }

  .big-text {
    font-size: 1.5rem;
    font-weight: var(--font-bold);
    font-family: "Montserrat", sans-serif;
  }

  .title-text {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    font-family: "Montserrat", sans-serif;
  }

  .hero-btn-text {
    font-size: 1rem;
    font-weight: var(--font-bold);
    font-family: "Montserrat", sans-serif;
  }

  .subtitle-text {
    font-size: 1rem;
    font-weight: var(--font-medium);
    font-family: "Montserrat", sans-serif;
  }

  .profile-image {
    width: 20rem;
    height: 20rem;
    border-radius: 50%;
    border: 0.25rem solid var(--primary-color);
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    object-fit: cover;
    display: block;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(10px);
    }
  }

  @media (max-width: 768px) {
    .intro-container {
      flex-direction: column;
      justify-content: center;
      gap: 2rem;
    }

    .intro-text {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .profile-image {
      width: 12rem;
      height: 12rem;
    }
  }
</style>
