<style>
  #about {
    position: relative;
    z-index: 2;
    padding: 0;
    min-height: 100vh;
  }

  /* Hero Section with Background */
  .about-hero {
    background:
      linear-gradient(135deg, rgba(30, 56, 96, 0.85), rgba(45, 74, 90, 0.75)),
      url("/images/code-in-macbook-screen-2.jpg") center/cover;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
  }

  .hero-content {
    max-width: 900px;
    padding: 2rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
    color: white;
    letter-spacing: 2px;
  }

  .highlight-text {
    background: linear-gradient(135deg, var(--primary-color), #7dd3fc);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.3rem);
    letter-spacing: 3px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    line-height: 1.6;
  }

  /* Content Section */
  .about-content {
    padding: 4rem 0;
  }

  /* Hero Quote Section */
  .hero-quote {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem auto;
    padding: 2rem;
  }

  .main-quote {
    font-size: 1.8rem;
    font-weight: var(--font-semi-bold);
    color: #b8860b;
    font-style: italic;
    line-height: 1.4;
    margin: 0;
    font-family: "Montserrat", sans-serif;
  }

  .quote-author {
    display: block;
    margin-top: 1.5rem;
    font-size: 1.1rem;
    color: var(--dirty-white);
    font-weight: var(--font-semi-bold);
  }

  /* Vision and Mission */
  .vision-mission-container {
    max-width: 1000px;
    margin: 0 auto;
    justify-content: space-between;
  }

  .vision-section,
  .mission-section {
    flex: 1;
    min-width: 300px;
    padding: 2rem;
  }

  .section-title {
    font-size: 1.8rem;
    font-weight: var(--font-bold);
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    font-family: "Montserrat", sans-serif;
    letter-spacing: 0.05em;
  }

  .section-text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--dirty-white);
    text-align: justify;
  }

  /* Leadership Section */
  .leadership-section {
    max-width: 1000px;
    margin: 0 auto;
    align-items: center;
    justify-content: space-between;
  }

  .leadership-image {
    flex: 0 0 300px;
  }

  .leader-photo {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 0.5rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .leadership-content {
    flex: 1;
    padding: 2rem;
    min-width: 300px;
  }

  /* Call to Action */
  .cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(0, 124, 240, 0.1),
      rgba(0, 223, 216, 0.1)
    );
    border-radius: 1rem;
    margin: 2rem 0;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--primary-color);
    margin-bottom: 2rem;
    font-family: "Montserrat", sans-serif;
    letter-spacing: 0.1em;
  }

  .cta-button {
    display: inline-block;
    background: var(--background-dark);
    color: var(--primary-color);
    padding: 1rem 2.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: var(--font-bold);
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    border: 2px solid var(--primary-color);
  }

  .cta-button:hover {
    background: var(--primary-color);
    color: var(--background-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 124, 240, 0.3);
  }

  /* Gallery Section */
  .gallery-section {
    margin-top: 4rem;
  }

  .gallery-title {
    font-size: 2.2rem;
    font-weight: var(--font-bold);
    text-align: center;
    color: var(--primary-color);
    margin-bottom: 3rem;
    font-family: "Montserrat", sans-serif;
    letter-spacing: 0.1em;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.1);
  }

  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: 1.5rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
  }

  .gallery-overlay h3 {
    font-size: 1.1rem;
    font-weight: var(--font-bold);
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .gallery-overlay p {
    font-size: 0.9rem;
    color: var(--dirty-white);
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .main-quote {
      font-size: 1.4rem;
    }

    .vision-mission-container {
      flex-direction: column;
    }

    .leadership-section {
      flex-direction: column;
      text-align: center;
    }

    .leadership-image {
      flex: none;
      margin-bottom: 2rem;
    }

    .leader-photo {
      max-width: 250px;
      height: 300px;
    }

    .cta-title {
      font-size: 2rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .gallery-overlay {
      transform: translateY(0);
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
    }

    /* Hero Section Responsive */
    .about-hero {
      min-height: 60vh;
      padding: 1rem;
    }

    .hero-content {
      padding: 1rem;
    }

    .hero-subtitle {
      letter-spacing: 1px;
    }
  }
</style>
