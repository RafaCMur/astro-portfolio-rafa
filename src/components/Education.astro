<style>
  .section-content-block {
    width: 96%;
    margin: 0 auto;
  }

  .block-container {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 2rem;
  }

  .block {
    background: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    border-radius: 0.75rem;
    width: 20rem; /* 320px */
    max-height: fit-content;
    text-align: left;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  .entry {
    margin-bottom: 1.5rem;
  }

  .subtitle,
  .date {
    color: #a1a1a1;
    font-size: 0.9rem;
  }
</style>
