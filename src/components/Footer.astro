---
import { Icon } from "astro-icon/components";
import { GITHUB_URL, LINKEDIN_URL } from "../consts";
---

<footer class="main-footer">
  <div class="footer-container">
    <!-- Footer Content Grid -->
    <div class="footer-grid">
      <!-- Services Section -->
      <div class="footer-section">
        <h3 class="footer-title">SERVICES</h3>
        <ul class="footer-links">
          <li><a href="/projects" class="footer-link">Web Development</a></li>
          <li>
            <a href="/expertise" class="footer-link">Frontend Solutions</a>
          </li>
          <li><a href="/about" class="footer-link">UI/UX Design</a></li>
          <li><a href="/contact" class="footer-link">Consulting</a></li>
        </ul>
      </div>

      <!-- About Section -->
      <div class="footer-section">
        <h3 class="footer-title">ABOUT</h3>
        <ul class="footer-links">
          <li><a href="/about" class="footer-link">About Me</a></li>
          <li><a href="/expertise" class="footer-link">Skills</a></li>
          <li><a href="/projects" class="footer-link">Portfolio</a></li>
          <li><a href="/contact" class="footer-link">Experience</a></li>
        </ul>
      </div>

      <!-- Contact Section -->
      <div class="footer-section">
        <h3 class="footer-title">CONNECT</h3>
        <ul class="footer-links">
          <li><a href="/contact" class="footer-link">Contact</a></li>
          <li>
            <a href={LINKEDIN_URL} target="_blank" class="footer-link"
              >LinkedIn</a
            >
          </li>
          <li>
            <a href={GITHUB_URL} target="_blank" class="footer-link">GitHub</a>
          </li>
          <li>
            <a href="/contact" class="footer-link">Email</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Social Media Links -->
    <div class="footer-social">
      <a
        href={GITHUB_URL}
        target="_blank"
        class="social-icon"
        aria-label="GitHub"
      >
        <Icon name="github" size={24} />
      </a>
      <a
        href={LINKEDIN_URL}
        target="_blank"
        class="social-icon"
        aria-label="LinkedIn"
      >
        <Icon name="linkedin" size={24} />
      </a>
      <a href="/contact" class="social-icon" aria-label="Email">
        <span style="font-size: 18px;">✉</span>
      </a>
    </div>

    <!-- Brand Section -->
    <div class="footer-brand">
      <div class="brand-logo">
        <h2 class="brand-name">RAFA CABANILLAS</h2>
        <p class="brand-tagline">FRONTEND DEVELOPER</p>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-divider"></div>
      <div class="footer-info">
        <p class="footer-tech">
          Crafted with ❤️ using Astro, TypeScript, Nodemailer and Supabase
        </p>
        <p class="footer-copyright">
          © {new Date().getFullYear()} RAFAEL CABANILLAS MURILLO. ALL RIGHTS RESERVED.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .main-footer {
    background: linear-gradient(
      135deg,
      var(--background-dark) 0%,
      #16213e 100%
    );
    color: #ffffff;
    padding: 60px 0 20px;
    position: relative;
    border-top: 2px solid #00d4ff;
    box-shadow: 0 -5px 20px rgba(0, 212, 255, 0.1);
  }

  .main-footer::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #00d4ff, transparent);
    opacity: 0.6;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 50px;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-title {
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 1px;
    margin-bottom: 20px;
    color: #00d4ff;
    text-transform: uppercase;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-link {
    color: var(--gray-icon);
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer-link:hover {
    color: #00d4ff;
    transform: translateX(5px);
  }

  .footer-social {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: rgba(0, 212, 255, 0.1);
    border: 2px solid rgba(0, 212, 255, 0.3);
    border-radius: 50%;
    color: #00d4ff;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-icon:hover {
    background: #00d4ff;
    color: #1a1a2e;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 212, 255, 0.3);
  }

  .footer-brand {
    text-align: center;
    margin-bottom: 40px;
  }

  .brand-logo {
    display: inline-block;
  }

  .brand-name {
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: 2px;
    margin: 0;
    color: #ffffff;
    text-transform: uppercase;
  }

  .brand-tagline {
    font-size: 0.9rem;
    color: #00d4ff;
    margin: 5px 0 0;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .footer-bottom {
    margin-top: 40px;
  }

  .footer-divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 212, 255, 0.5),
      transparent
    );
    margin-bottom: 30px;
  }

  .footer-info {
    text-align: center;
  }

  .footer-tech {
    font-size: 0.9rem;
    color: var(--gray-icon);
    margin-bottom: 10px;
  }

  .footer-copyright {
    font-size: 0.85rem;
    color: #888;
    font-weight: 500;
    letter-spacing: 0.5px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .main-footer {
      padding: 40px 0 20px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 30px;
    }

    .footer-section {
      text-align: center;
    }

    .brand-name {
      font-size: 1.5rem;
    }

    .footer-social {
      margin-bottom: 30px;
    }

    .social-icon {
      width: 45px;
      height: 45px;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 0 15px;
    }

    .footer-grid {
      gap: 25px;
    }

    .brand-name {
      font-size: 1.3rem;
      letter-spacing: 1px;
    }

    .footer-social {
      gap: 15px;
    }
  }
</style>
