---
import ProjectsGrid from "./ProjectsGrid.astro";
import { getAllProjects } from "../data/projects";

const allProjects = getAllProjects();
---

<section id="projects">
  <div class="projects-hero">
    <div class="hero-content">
      <h1 class="hero-title">FEATURED PORTFOLIO</h1>
      <div class="hero-subtitle gradient-text">DEVELOPMENT</div>
      <p class="hero-description">
        MODERN WEB EXPERIENCES & INNOVATIVE SOLUTIONS
      </p>
    </div>
  </div>

  <ProjectsGrid projects={allProjects} title="" fullWidth={true} />
</section>

<style>
  #projects {
    background: var(--background-test2);
  }

  /* Hero Section Styles */
  .projects-hero {
    background: var(--background-test2);
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 4rem 2rem;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: var(--font-bold);
    letter-spacing: 3px;
    margin-bottom: 1rem;
    color: white;
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    font-weight: var(--font-medium);
    margin-bottom: 2rem;
    letter-spacing: 2px;
    position: relative;
  }

  .hero-subtitle::before,
  .hero-subtitle::after {
    content: "";
    position: absolute;
    top: 50%;
    width: 60px;
    height: 2px;
    background: var(--primary-color);
    transform: translateY(-50%);
  }

  .hero-subtitle::before {
    left: -80px;
  }

  .hero-subtitle::after {
    right: -80px;
  }

  .hero-description {
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.9);
    letter-spacing: 1px;
    margin-bottom: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .projects-hero {
      min-height: 35vh;
      padding: 3rem 1rem;
    }

    .hero-subtitle::before,
    .hero-subtitle::after {
      width: 40px;
    }

    .hero-subtitle::before {
      left: -50px;
    }

    .hero-subtitle::after {
      right: -50px;
    }
  }

  @media (max-width: 480px) {
    .hero-subtitle::before,
    .hero-subtitle::after {
      display: none;
    }
  }
</style>
