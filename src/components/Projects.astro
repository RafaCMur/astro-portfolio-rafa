---
import { Icon } from "astro-icon/components";
---

<section id="projects" class="mb-2">
  <div class="section-content">
    <h1>Projects</h1>

    <div class="flex-row mt-1 mb-1">
      <divZ class="card">
        <div class="card-image-container">
          <img
            src="auth-screens-react-native-welcome-cropped.jpg"
            alt="Descripción de la imagen"
            class="card-image"
          />
        </div>
        <div class="card-content">
          <h2 class="card-title">Auth Screens</h2>
          <p class="card-description">App created with React Native and Expo</p>
          <div class="flex-row gap-1">
            <a
              href="https://github.com/RafaCMur/auth-screens-react-native"
              target="_blank"
              rel="noopener noreferrer"
              class="button-secondary"
            >
              <span>Code</span>
              <Icon name="github" size={24} />
            </a>
            <a
              href="https://drive.google.com/drive/folders/1vd-xsVqwOO-rSTbotLDocccvpFipFFTS?usp=drive_link"
              target="_blank"
              rel="noopener noreferrer"
              class="button-primary"
            >
              <span>Demo</span>
              <Icon name="external-link" size={24} />
            </a>
          </div>
        </div>
      </divZ>

      <div class="card">
        <div class="card-image-container">
          <img
            src="tuning-chrome-extension.webp"
            alt="Tuning device in a programming environment"
            class="card-image"
          />
        </div>
        <div class="card-content">
          <h2 class="card-title">Chrome extension</h2>
          <p class="card-description">Related to music tuning. React JS</p>
          <div class="flex-row gap-1">
            <div class="button-secondary">
              <span>Ongoing...</span>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-image-container">
          <img
            src="eye-friendly-vscode-theme.webp"
            alt="Descripción de la imagen"
            class="card-image"
          />
        </div>
        <div class="card-content">
          <h2 class="card-title">VSCode theme</h2>
          <p class="card-description">
            An eye friendly theme for Visual Studio Code.
          </p>
          <div class="flex-row gap-1">
            <div class="button-secondary">
              <span>Ongoing...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    background-color: rgba(30, 56, 96, 0.7);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.2s;
    width: 18rem; /* 288px */
    margin: 1rem;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Cover the entire container */
    aspect-ratio: 3 / 2;
  }

  .card-content {
    padding: 1rem;
  }

  .card-title {
    font-size: 1.5rem;
    color: var(--primary-color);
    margin-bottom: 0.7rem;
  }

  .card-description {
    font-size: 1rem;
    color: #ccd6f6;
    margin-bottom: 1rem;
  }
</style>
